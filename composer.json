{
    "name": "phpextra/event-manager",
    "description": "Event manager based on reflection, annotations and priority queue",
    "keywords": ["event manager", "event", "listener", "observer", "psr-0", "psr", "phpextra"],
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/phpextra/event-manager",
    "support": {
        "issues": "https://github.com/phpextra/event-manager/issues",
        "source": "https://github.com/phpextra/event-manager"
    },
    "authors": [
        {
            "name": "Jacek Kobus",
            "email": "kobus.jacek@gmail.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "PHPExtra\\EventManager": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "PHPExtra\\EventManager": "tests/fixtures/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.5",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.2",
        "silex/silex": "^1.3",
        "silex/web-profiler": "^1.0",
        "symfony/browser-kit": "^2.5"
    },
    "archive": {
        "exclude": ["/*", "!/src", "!.gitignore"]
    }
}
